<Page x:Class="UrTube.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UrTube"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1300"
      Background="White">
    <Grid Height="600" Width="1300">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Grid>
                <StackPanel Orientation="Vertical">
                    <TextBlock  Margin="10"
                            FontWeight="Bold"
                            FontSize="20"
                            Text="CHỌN TÀI NGUYÊN" HorizontalAlignment="Center" Foreground="#FF0873B0"/>
                    <DockPanel  VerticalAlignment="Top" 
                        Grid.Row="0"
                        Margin="20,0,20,0">
                        <TextBox x:Name="tblSearch" Text="Nhập từ khóa hoặc link video/danh sách phát"
                         Foreground="DimGray" 
                         MinWidth="500"
                         DockPanel.Dock="Left"
                         FontSize="16"
                         HorizontalAlignment="Center"/>

                        <Button x:Name="btnSearch"  Background="White" 
                             Margin="0,0,0,0"
                             DockPanel.Dock="Right"
                            Click="btnSearch_Click">
                            <StackPanel >
                                <Image Source="Assets/search (1).png" Height="20" />
                            </StackPanel>
                        </Button>
                    </DockPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                        Margin="0,0,40,0"
                        Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <Border Height="20" Width="20">
                        <Border.Background>
                            <ImageBrush ImageSource="Assets/list (2).png" Stretch="Uniform"/>
                        </Border.Background>
                    </Border>
                    <Border Height="20" Width="20"
                        Margin="10,0,0,0">
                        <Border.Background>
                            <ImageBrush ImageSource="Assets/list (1).png" Stretch="Uniform"/>
                        </Border.Background>
                    </Border>
                </StackPanel>
                <TextBlock Text="Tìm được: 123 videos" Margin="10,0,0,0" VerticalAlignment="Bottom"/>
            </Grid>
            
            <ListView x:Name="lvVideoResult"
                      Margin="20,0,20,0"
                      BorderThickness="0"
                      SelectionMode="Multiple"
                      ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
                      Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="600">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="6*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Source="{Binding Snippet.Thumbnails.Default.Url}"/>
                            <StackPanel Orientation="Vertical"
                                    Margin="10"
                                    Grid.Column="1">
                                <TextBlock Text="{Binding Snippet.Title}"
                                           TextWrapping="WrapWithOverflow"
                                           FontSize="18"
                                           Foreground="#167ac6"/>
                                <TextBlock Text="{Binding Snippet.ChannelTitle}"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                                <TextBlock Text="3 tháng trước"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                                <TextBlock Text="5.272.835 lượt xem"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Grid.Row="2">
                <Button  Background="Transparent" BorderThickness="0" Width="100">
                    <Border CornerRadius="10" 
                            Padding="5"
                            Width="95"
                            BorderThickness="2"
                            BorderBrush="Green">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Assets/cloud-refresh-arrow.png" Height="30" />
                            <TextBlock Text="Chọn"
                                       Foreground="Green"
                                       FontSize="20"
                                       FontWeight="Light" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical">
                <TextBlock  Margin="10"
                            FontWeight="Bold"
                            FontSize="20"
                            Text="VIDEOS ĐÃ CHỌN (3)" HorizontalAlignment="Center" Foreground="#FF0873B0"/>
                <DockPanel  VerticalAlignment="Top" 
                        Grid.Row="0"
                        Margin="20,0,20,0">
                    <TextBox x:Name="tblSearch1" Text="Nhập tên video để tìm"
                         Foreground="DimGray" 
                         MinWidth="500"
                         DockPanel.Dock="Left"
                         FontSize="16"
                         HorizontalAlignment="Center"/>

                    <Button x:Name="btnSearch1"  Background="White" 
                             Margin="0,0,0,0"
                             DockPanel.Dock="Right"
                            Click="btnSearch_Click">
                        <StackPanel >
                            <Image Source="Assets/search (1).png" Height="20" />
                        </StackPanel>
                    </Button>
                </DockPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="0,98,40,0"
                        Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top">
                <TextBlock Text="Clear all" Foreground="Blue" TextDecorations="Underline"/>
            </StackPanel>

            <ListView x:Name="lvVideoResult1"
                      Margin="20,0,20,0"
                      BorderThickness="0"
                      SelectionMode="Multiple"
                      ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
                      Grid.Row="1">
                <!--<ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="600">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="6*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Source="{Binding Snippet.Thumbnails.Default.Url}"/>
                            <StackPanel Orientation="Vertical"
                                    Margin="10"
                                    Grid.Column="1">
                                <TextBlock Text="{Binding Snippet.Title}"
                                           TextWrapping="WrapWithOverflow"
                                           FontSize="18"
                                           Foreground="#167ac6"/>
                                <TextBlock Text="{Binding Snippet.ChannelTitle}"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                                <TextBlock Text="3 tháng trước"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                                <TextBlock Text="5.272.835 lượt xem"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>-->
                <ListViewItem>
                    <Grid Width="500">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30*"/>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="20*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="Assets/hqdefault.jpg"/>
                        <StackPanel Orientation="Vertical"
                                    Margin="10"
                                    Grid.Column="1">
                            <TextBlock Text="{Binding Snippet.Title}"
                                           TextWrapping="WrapWithOverflow"
                                           FontSize="18"
                                           Foreground="#167ac6"/>
                            <TextBlock Text="{Binding Snippet.ChannelTitle}"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                            <TextBlock Text="3 tháng trước"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                            <TextBlock Text="5.272.835 lượt xem"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                            <Button  Background="Transparent"
                                     BorderThickness="0">
                                <Border CornerRadius="5" 
                                        Padding="5"
                                        BorderThickness="2"
                                        BorderBrush="Red">
                                    <Grid>
                                        <Image Source="Assets/rubbish-bin.png" 
                                               Height="20" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Grid>
                                </Border>
                            </Button>
                        </StackPanel>
                    </Grid>
                </ListViewItem>
            </ListView>
            <Grid Grid.Row="2">
                <Button  Background="Transparent" BorderThickness="0" Width="130">
                    <Border CornerRadius="10" 
                        Padding="5"
                        Width="125"
                        BorderThickness="2"
                        BorderBrush="Green">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Assets/cloud-refresh-arrow.png" Height="30" />
                            <TextBlock Text="Tiếp theo"
                                    Foreground="Green"
                                    FontSize="20"
                                    FontWeight="Light" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Button>
            </Grid>
        </Grid>
        <Grid Width="2" Background="#cc181e" HorizontalAlignment="Right"/>
    </Grid>
</Page>
