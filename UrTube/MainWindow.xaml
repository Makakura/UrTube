<Window x:Class="UrTube.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UrTube"
        mc:Ignorable="d" 
        Height="730" 
        Width="1366" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Border Height="50" Width="100"
                Margin="20,0,0,0"
            HorizontalAlignment="Left">
                <Border.Background>
                    <ImageBrush ImageSource="Assets/YouTube-logo.png" Stretch="UniformToFill"/>
                </Border.Background>

            </Border>
            <StackPanel Orientation="Horizontal" 
                        Margin="10"
                        HorizontalAlignment="Right">
                <TextBlock Text="_" 
                           FontSize="20"/>
                <TextBlock Text="X" 
                           FontSize="20" 
                           Margin="10,0,10,0"
                           PreviewMouseDown="TextBlock_PreviewMouseDown" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Height="3" Background="#cc181e" VerticalAlignment="Top"/>
        <Grid Grid.Row="0" 
              Margin="450,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <TextBlock x:Name="tblState1" 
                           Text="1. Xác thực tài khoản" 
                       FontSize="20"
                       TextWrapping="WrapWithOverflow"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontWeight="Medium"
                       FontFamily="Segoe UI"/>
                <Grid x:Name="grStateLine1" Background="#cc181e" 
                      Height="4" 
                      MaxWidth="100"
                      Visibility="Visible"
                      VerticalAlignment="Bottom"/>
            </Grid>
            <Grid Grid.Column="1">
                <TextBlock x:Name="tblState2" 
                           Text="2. Chọn        tài nguyên" 
                           FontSize="20"
                           FontWeight="Regular"
                           TextWrapping="WrapWithOverflow"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           FontFamily="Segoe UI"/>
                <Grid  x:Name="grStateLine2"
                       Background="#cc181e" 
                      Height="4" 
                      Visibility="Collapsed"
                      MaxWidth="200"
                      VerticalAlignment="Bottom"/>
            </Grid>
            <Grid Grid.Column="2">
                <TextBlock x:Name="tblState3"
                           Text="3. Tùy chỉnh" 
                           FontSize="20"
                           FontWeight="Regular"
                           TextWrapping="WrapWithOverflow"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           FontFamily="Segoe UI"/>
                <Grid  x:Name="grStateLine3"
                       
                      Background="#cc181e" 
                      Height="4" 
                      Visibility="Hidden"
                      MaxWidth="200"
                      VerticalAlignment="Bottom"/>
            </Grid>
            <Grid Grid.Column="3">
                <TextBlock x:Name="tblState4"
                           Text="4. Reup" 
                           FontSize="20"
                           TextWrapping="WrapWithOverflow"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           FontFamily="Segoe UI"/>
                <Grid  x:Name="grStateLine4"
                       Background="#cc181e" 
                       Height="4" 
                       Visibility="Collapsed"
                       MaxWidth="100"
                       VerticalAlignment="Bottom"/>
            </Grid>
        </Grid>
        <Grid Background="#f1f1f1"
              Grid.Row="1">
            <Grid x:Name="grLogin" 
                  Background="White" 
                  Margin="20" 
                  Width="500" 
                  HorizontalAlignment="Center" 
                  Visibility="Visible" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="100*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Height="2" Background="#cc181e" VerticalAlignment="Bottom"/>
                <TextBlock Text="ĐĂNG NHẬP TÀI KHOẢN GOOGLE"
                           HorizontalAlignment="Center"
                           FontWeight="Medium"
                           FontSize="20"
                           Grid.Row="0" VerticalAlignment="Center"/>
                <Button  x:Name="btnLogin"
                         Background="Transparent" 
                         BorderThickness="0" 
                         Width="130"
                         Grid.Row="1" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Center"
                         Click="btnLogin_Click">
                    <Border CornerRadius="10" 
                                Padding="5"
                                Width="125"
                                BorderThickness="2"
                                BorderBrush="BlueViolet">
                        <Grid >
                            <TextBlock Text="Đăng nhập"
                                        Foreground="BlueViolet"
                                        FontSize="20"
                                        FontWeight="Light"
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Button>
            </Grid>
            <Grid x:Name="grPickResource"
                  Margin="20"
                  Background="White"
                  Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="80*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <StackPanel Orientation="Vertical">
                            <TextBlock  Margin="10"
                            FontWeight="Bold"
                            FontSize="20"
                            Text="CHỌN TÀI NGUYÊN" HorizontalAlignment="Center" Foreground="#FF0873B0"/>
                            <DockPanel  VerticalAlignment="Top" 
                        Grid.Row="0"
                        Margin="20,0,20,0">
                                <TextBox x:Name="tblSearch" Text="Nhập từ khóa hoặc link video/danh sách phát"
                         Foreground="DimGray" 
                         MinWidth="500"
                         DockPanel.Dock="Left"
                         FontSize="16"
                         HorizontalAlignment="Center"/>

                                <Button x:Name="btnSearch"  Background="White" 
                             Margin="0,0,0,0"
                             DockPanel.Dock="Right"
                            Click="btnSearch_Click">
                                    <StackPanel >
                                        <Image Source="Assets/search (1).png" Height="20" />
                                    </StackPanel>
                                </Button>
                            </DockPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                        Margin="0,0,40,0"
                        Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <Border Height="20" Width="20">
                                <Border.Background>
                                    <ImageBrush ImageSource="Assets/list (2).png" Stretch="Uniform"/>
                                </Border.Background>
                            </Border>
                            <Border Height="20" Width="20"
                        Margin="10,0,0,0">
                                <Border.Background>
                                    <ImageBrush ImageSource="Assets/list (1).png" Stretch="Uniform"/>
                                </Border.Background>
                            </Border>
                        </StackPanel>
                        <TextBlock Text="Tìm được: 123 videos" Margin="10,0,0,0" VerticalAlignment="Bottom"/>
                    </Grid>

                    <ListView x:Name="lvVideoResult"
                      Margin="20,0,20,0"
                      BorderThickness="0"
                      SelectionMode="Multiple"
                      ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
                      Grid.Row="1">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="600">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="6*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0" Source="{Binding Snippet.Thumbnails.Default.Url}"/>
                                    <StackPanel Orientation="Vertical"
                                    Margin="10"
                                    Grid.Column="1">
                                        <TextBlock Text="{Binding Snippet.Title}"
                                           TextWrapping="WrapWithOverflow"
                                           FontSize="18"
                                           Foreground="#167ac6"/>
                                        <TextBlock Text="{Binding Snippet.ChannelTitle}"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                                        <TextBlock Text="3 tháng trước"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                                        <TextBlock Text="5.272.835 lượt xem"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Grid Grid.Row="2">
                        <Button  Background="Transparent" BorderThickness="0" Width="100">
                            <Border CornerRadius="10" 
                            Padding="5"
                            Width="95"
                            BorderThickness="2"
                            BorderBrush="Green">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Assets/cloud-refresh-arrow.png" Height="30" />
                                    <TextBlock Text="Chọn"
                                       Foreground="Green"
                                       FontSize="20"
                                       FontWeight="Light" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Button>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="80*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical">
                        <TextBlock  Margin="10"
                            FontWeight="Bold"
                            FontSize="20"
                            Text="VIDEOS ĐÃ CHỌN (3)" HorizontalAlignment="Center" Foreground="#FF0873B0"/>
                        <DockPanel  VerticalAlignment="Top" 
                        Grid.Row="0"
                        Margin="20,0,20,0">
                            <TextBox x:Name="tblSearch1" Text="Nhập tên video để tìm"
                         Foreground="DimGray" 
                         MinWidth="500"
                         DockPanel.Dock="Left"
                         FontSize="16"
                         HorizontalAlignment="Center"/>

                            <Button x:Name="btnSearch1"  Background="White" 
                             Margin="0,0,0,0"
                             DockPanel.Dock="Right"
                            Click="btnSearch_Click">
                                <StackPanel >
                                    <Image Source="Assets/search (1).png" Height="20" />
                                </StackPanel>
                            </Button>
                        </DockPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                        Margin="0,98,40,0"
                        Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <TextBlock Text="Clear all" Foreground="Blue" TextDecorations="Underline"/>
                    </StackPanel>

                    <ListView x:Name="lvVideoResult1"
                      Margin="20,0,20,0"
                      BorderThickness="0"
                      SelectionMode="Multiple"
                      ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
                      Grid.Row="1">
                        <!--<ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="600">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="6*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Source="{Binding Snippet.Thumbnails.Default.Url}"/>
                            <StackPanel Orientation="Vertical"
                                    Margin="10"
                                    Grid.Column="1">
                                <TextBlock Text="{Binding Snippet.Title}"
                                           TextWrapping="WrapWithOverflow"
                                           FontSize="18"
                                           Foreground="#167ac6"/>
                                <TextBlock Text="{Binding Snippet.ChannelTitle}"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                                <TextBlock Text="3 tháng trước"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                                <TextBlock Text="5.272.835 lượt xem"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>-->
                        <ListViewItem>
                            <Grid Width="500">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30*"/>
                                    <ColumnDefinition Width="50*"/>
                                    <ColumnDefinition Width="20*"/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0" Source="Assets/hqdefault.jpg"/>
                                <StackPanel Orientation="Vertical"
                                    Margin="10"
                                    Grid.Column="1">
                                    <TextBlock Text="{Binding Snippet.Title}"
                                           TextWrapping="WrapWithOverflow"
                                           FontSize="18"
                                           Foreground="#167ac6"/>
                                    <TextBlock Text="{Binding Snippet.ChannelTitle}"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                                    <TextBlock Text="3 tháng trước"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                                    <TextBlock Text="5.272.835 lượt xem"
                                       FontSize="16"
                                       Foreground="DimGray"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                                    <Button  Background="Transparent"
                                     BorderThickness="0">
                                        <Border CornerRadius="5" 
                                        Padding="5"
                                        BorderThickness="2"
                                        BorderBrush="Red">
                                            <Grid>
                                                <Image Source="Assets/rubbish-bin.png" 
                                               Height="20" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Grid>
                                        </Border>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </ListViewItem>
                    </ListView>
                    <Grid Grid.Row="2">
                        <Button  Background="Transparent" BorderThickness="0" Width="130">
                            <Border CornerRadius="10" 
                        Padding="5"
                        Width="125"
                        BorderThickness="2"
                        BorderBrush="Green">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Assets/cloud-refresh-arrow.png" Height="30" />
                                    <TextBlock Text="Tiếp theo"
                                    Foreground="Green"
                                    FontSize="20"
                                    FontWeight="Light" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Button>
                    </Grid>
                </Grid>
                <Grid Width="2" Background="#cc181e" HorizontalAlignment="Right"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
